<h1>Create a Quizmaker Account</h1>

<div class="error_messages">
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this users from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div style="width: 300px">
      <%= form_for :user, url: { action: "create" } do |f| %> <!-- users_path? -->

        <%= render(:partial => "form", :locals => {:f => f}) %>

        <div class="form-buttons">
          <%= submit_tag "Create User Account", class: "btn btn-primary" %>
        </div>
        <div class="cancel_link">
          <%= link_to "Cancel", :back %>
        </div>
      <% end %>
    </div>
  </div>

</div>
