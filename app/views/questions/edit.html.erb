<h1>Editing Question # <%= @question.number %> for <%= @quiz.title %></h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div style="width: 300px">
      <%= form_for @question, url: user_quiz_question_path  do |f| %>

      <%= render(:partial => "form", :locals => {:f => f}) %>

        <div class="form-buttons">
          <%= submit_tag "Update Question", class: "btn btn-primary" %>
        </div>
        <div class="cancel_link">
          <%= link_to "Cancel", :back %>
        </div>

        <% end %>
      </div>
    </div>
  </div>
  <br/>
  <p><%= link_to 'Delete This Question', user_quiz_question_path(:id => @question.id, :quiz_id => @quiz.id),
          method: :delete,
          data: { confirm: 'Are you sure you want to permanently delete this question?' } %></p>
  <%= link_to 'Back to Quiz', user_quiz_path(:id => @quiz.id) %>
